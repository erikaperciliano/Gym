<div class="item">
        <div>Avartar URL</div>
        <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{member.avatar_url}}">
        </div>
    </div>

    <div class="item">
        <div>Name</div>
        <div>
            <input type="text" name="name" value="{{member.name}}">
        </div>
    </div>

    <div class="item">
        <div>Email</div>
        <div>
            <input type="email" name="email" value="{{member.email}}">
        </div>
    </div>

    <div class="item">
        <div>Bithrday</div>
        <div>
        <input type="date", name="birth" value"{{member.birth}}">
        </div>
    </div>

    <div class="item">
        <div>Gender</div>
        <div>
        <span>
            <input type="radio" name="gender" value="M"
                {% if member.gender == 'M' %}
                    checked
                {% endif %}> Male 
        </span>
        <span>
            <input type="radio" name="gender" value="F"
                {% if member.gender == 'F' %}
                    checked
                {% endif %}
            > Female 
        </span>
        </div>
    </div>

    <div class="item">
        <div>Blood Type</div>
        <div>
            <select name="blood">
                <option value="A+" {% if member.blood == "A1" %} selected {% endif %}>
                    A+
                </option>
                <option value="A-" {% if member.blood == "A0" %} selected {% endif %}>
                    A-
                </option>
                <option value="B+" {% if member.blood == "B1" %} selected {% endif %}>
                    B+
                </option>
                <option value="B-" {% if member.blood == "B0" %} selected {% endif %}>
                    B-
                </option>
                <option value="AB+" {% if member.blood == "AB1" %} selected {% endif %}>
                    AB+
                </option>
                <option value="AB-" {% if member.blood == "AB0" %} selected{% endif %}>
                    AB-
                </option>
                <option value="O+" {% if member.blood == "O1" %} selected {% endif %}>
                    O+
                </option>
                <option value="O-"{% if member.blood == "O0" %} selected {% endif %}>
                    O-
                </option>
            </select>
        </div>
    </div>

    <div class="item">
        <div>Weight (kg)</div>
        <div>
        <input type="number", name="weight" value"{{member.weight}}">
        </div>
    </div>

    <div class="item">
        <div>Height (cm)</div>
        <div>
        <input type="number", name="height" value"{{member.height}}">
        </div>
    </div>
    
    <button type="submit">Save</button>


